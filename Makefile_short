NAME = cub3d
SRC =	src/checkers.c \
		src/color_errors.c \
		src/cub3d.c \
		src/error.c \
		src/file_tools.c \
		src/get_next_line.c \
		src/init_free.c \
		src/map_errors.c \
		src/parse_file.c \
		src/parse_map.c \
		src/txt_color_errors.c \
		src/state.c \
		src/str_tools.c

CC = gcc
INCLUDES = -I include -I libft
CFLAGS = -Wall -Werror -Wextra $(INCLUDES)
OBJECTS = $(SRC:.c=.o)

$(NAME): $(OBJECTS)
	@make bonus -C libft
	@$(CC) $(CFLAGS) $(INCLUDES) $(OBJECTS) libft/libft.a -o $(NAME) -g3
	@clear
	@echo "\n\033[92m"-------------\\nðŸ‘Œ COMPILED ðŸ‘Œ\\n-------------\\n"\033[0m\n"

all: $(NAME)

clean: 
	@clear
	@echo "\n\033[31m"-------------------\\nðŸ’£ DELETED FILES ðŸ’£\\n-------------------\\n"\033[0m\n"
	@rm -f $(OBJECTS)

fclean: clean
	@make clean -C ./libft
	@rm -rf $(NAME)
	@rm -rf ./libft/libft.a
	@rm -rf cub3d.a

re: fclean all

.PHONY: all clean re